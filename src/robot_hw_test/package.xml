<?xml version="1.0"?>
<package format="2">
  <name>robot_hw_test</name>
  <version>0.0.0</version>
  <description>机械臂导纳控制器包</description>

  <maintainer email="ljj@example.com">ljj</maintainer>
  <license>MIT</license>

  <buildtool_depend>catkin</buildtool_depend>

  <!-- 核心依赖 -->
  <depend>roscpp</depend>
  <depend>rospy</depend>
  <depend>std_msgs</depend>
  
  <!-- 控制器相关 -->
  <depend>controller_manager</depend>
  <depend>controller_interface</depend>
  <depend>hardware_interface</depend>
  <depend>joint_state_controller</depend>
  <depend>robot_state_publisher</depend>
  
  <!-- 运动学和几何 -->
  <depend>kdl_parser</depend>
  <depend>geometry_msgs</depend>
  <depend>sensor_msgs</depend>
  <depend>tf</depend>
  <depend>tf_conversions</depend>
  <depend>urdf</depend>
  
  <!-- 实时工具 -->
  <depend>realtime_tools</depend>
  
  <!-- 插件系统 -->
  <depend>pluginlib</depend>

  <!-- 导出插件 -->
  <export>
  <hardware_interface plugin="${prefix}/robot_hw.xml"/>

    <controller_interface plugin="${prefix}/my_robot_controller.xml"/>
    <controller_interface plugin="${prefix}/my_robot_trajectory_controller.xml"/>
    <controller_interface plugin="${prefix}/admittance_controller_plugin.xml"/>
  </export>
</package>
